<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Clickable">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CircleClickable">
        <item name="android:background">@drawable/circle_clickable_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="FilterTextView" parent="CircleClickable">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textColor">@color/filter_item_color</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_width">@dimen/radio_button_size</item>
        <item name="android:layout_height">@dimen/radio_button_size</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@drawable/radio_button_check</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <dimen name="radio_button_size">20dp</dimen>

</resources>